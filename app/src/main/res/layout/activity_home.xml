<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.example.myapplication.HomeActivity">


    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="71dp"
        android:gravity="center"
        android:text="What would you like to do?"
        android:textSize="30sp"
        app:fontFamily="sans-serif" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="83dp"
        app:srcCompat="@drawable/circle_tran" />

    <Button
        android:id="@+id/search_icon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/imageView10"
        android:layout_marginStart="14dp"
        android:paddingBottom="56dp"
        android:layout_marginLeft="14dp"
        android:background="@drawable/search_icon" />

    <Button
        android:id="@+id/chat_icon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignEnd="@+id/imageView10"
        android:layout_alignRight="@+id/imageView10"
        android:layout_alignTop="@+id/imageView10"
        android:background="@drawable/chat_icon" />

    <Button
        android:id="@+id/transport_icon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/search_icon"
        android:layout_alignLeft="@+id/search_icon"
        android:layout_marginBottom="58dp"
        android:background="@drawable/transport_icon" />

    <Button
        android:id="@+id/profile_icon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignEnd="@+id/imageView10"
        android:layout_alignRight="@+id/imageView10"
        android:layout_alignTop="@+id/transport_icon"
        android:background="@drawable/profile_icon"/>


</RelativeLayout>
