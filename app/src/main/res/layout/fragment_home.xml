<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.example.myapplication.HomeActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="353dp"
        android:layout_height="493dp"
        android:layout_alignBottom="@+id/buttonNight5"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="-16dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/background_pic" />

    <Button
        android:id="@+id/buttonNight4"
        android:layout_width="124dp"
        android:layout_height="121dp"
        android:layout_below="@+id/buttonNight3"
        android:layout_centerHorizontal="true"
        android:alpha="0.7"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#fff" />

    <Button
        android:id="@+id/buttonNight5"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView"
        android:layout_marginBottom="23dp"
        android:alpha="0.7"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#fff" />

    <Button
        android:id="@+id/buttonNight3"
        android:layout_width="105dp"
        android:layout_height="103dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/buttonNight"
        android:layout_alignLeft="@+id/buttonNight"
        android:layout_marginTop="209dp"
        android:alpha="0.7"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#fff" />


    <Button
        android:id="@+id/buttonNight"
        android:layout_width="102dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="36dp"
        android:layout_marginEnd="39dp"
        android:layout_marginRight="39dp"
        android:alpha="0.7"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#fff" />

    <Button
        android:id="@+id/buttonDay"
        android:layout_width="124dp"
        android:layout_height="128dp"
        android:layout_alignStart="@+id/buttonNight5"
        android:layout_alignLeft="@+id/buttonNight5"
        android:layout_below="@+id/textView"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="7dp"
        android:alpha="0.7"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#fff" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="100dp"
        android:layout_height="107dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="183dp"
        android:elevation="2dp"
        app:srcCompat="@drawable/search_icon" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="90dp"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/buttonNight3"
        android:layout_alignLeft="@+id/buttonNight3"
        android:layout_marginTop="234dp"
        android:elevation="2dp"
        app:srcCompat="@drawable/trans_icon" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="120dp"
        android:layout_height="75dp"
        android:layout_alignBottom="@+id/buttonNight5"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:elevation="2dp"
        app:srcCompat="@drawable/map_icon" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="88dp"
        android:layout_height="82dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="153dp"
        android:elevation="2dp"
        app:srcCompat="@drawable/profile_icon" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="97dp"
        android:layout_height="77dp"
        android:layout_alignBottom="@+id/buttonNight"
        android:layout_alignStart="@+id/buttonNight5"
        android:layout_alignLeft="@+id/buttonNight5"
        android:elevation="2dp"
        app:srcCompat="@drawable/chat_icon" />


</RelativeLayout>
